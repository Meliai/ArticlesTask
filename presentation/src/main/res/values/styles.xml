<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TypographyTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="TypographyDescription">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_size_description</item>
    </style>

    <style name="TypographyDate">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_size_date</item>
    </style>

    <style name="TypographyAuthor">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_size_author</item>
    </style>

</resources>
